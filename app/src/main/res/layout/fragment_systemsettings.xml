<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:layout_marginTop="8dp"
        android:background="@color/cellSeparator" />

    <!--检查更新按钮块-->
    <RelativeLayout
        android:id="@+id/settings_btn_update"
        android:layout_width="match_parent"
        android:layout_height="@dimen/fragment_settings_cellheight">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="检查更新"
            android:layout_marginLeft="@dimen/paddingSize"
            android:layout_centerVertical="true"/>
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_alignParentRight="true"
            android:layout_marginRight="@dimen/paddingSize"
            android:src="@mipmap/arrow"/>

    </RelativeLayout>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/LineSeparator" />

    <!--关于按钮块-->
    <RelativeLayout
        android:id="@+id/settings_btn_about"
        android:layout_width="match_parent"
        android:layout_height="@dimen/fragment_settings_cellheight">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="关于"
            android:layout_marginLeft="@dimen/paddingSize"
            android:layout_centerVertical="true"/>
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_alignParentRight="true"
            android:layout_marginRight="@dimen/paddingSize"
            android:src="@mipmap/arrow"/>

    </RelativeLayout>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:background="@color/cellSeparator" />

    <!--退出登录按钮-->
    <Button
        android:id="@+id/settings_btn_exit"
        android:layout_width="match_parent"
        android:layout_height="@dimen/fragment_settings_cellheight"
        android:layout_marginTop="@dimen/cell_padding"
        android:background="@color/colorWhite"
        android:text="退出登录" />



</LinearLayout>